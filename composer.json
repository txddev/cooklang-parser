{
    "name": "txd/cooklang-parser",
    "description": "A package to parse Cooklang recipes in PHP/Laravel applications.",
    "type": "library",
    "require": {
        "php": "^8.3",
        "illuminate/support": "^11|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "license": "MIT",
    "autoload": {
        "classmap": ["src/"],
        "psr-4": {
            "Txd\\CooklangParser\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Fabio Spadea",
            "email": "fabio@techseed.it"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "Txd\\CooklangParser\\CooklangParserServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "pest"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
