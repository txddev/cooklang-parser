{
    "name": "txd/cooklang-parser",
    "description": "A package to parse Cooklang recipes in PHP/Laravel applications.",
    "type": "library",
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "pestphp/pest": "^3.0"
    },
    "license": "MIT",
    "autoload": {
        "classmap": ["src/"],
        "psr-4": {
            "Txd\\CooklangParser\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "authors": [
        {
            "name": "Fabio Spadea",
            "email": "fabio@techseed.it"
        }
    ],
    "scripts": {
        "test": "pest"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
